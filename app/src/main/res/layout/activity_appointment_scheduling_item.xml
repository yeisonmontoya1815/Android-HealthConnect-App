<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="12dp">

    <TextView
        android:id="@+id/activity_appointment_scheduling_item_appointment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/date_background"
        android:paddingHorizontal="10dp"
        android:paddingVertical="8dp"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:backgroundTint="@color/pastel_green"
        tools:text="09:30" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/activity_appointment_scheduling_item_appointment_time"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/activity_appointment_scheduling_item_patient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:text="Mr. Adam Smith" />

        <TextView
            android:id="@+id/activity_appointment_scheduling_item_patient_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="72 years-old" />

        <TextView
            android:id="@+id/activity_appointment_scheduling_item_appointment_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Regular consultation" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>